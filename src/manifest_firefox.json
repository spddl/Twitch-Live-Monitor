{
  "manifest_version": 2,
  "name": "Twitch Live Monitor",
  "short_name": "Twitch Live Monitor",
  "version": "0.0.32",
  "description": "Twitch TV extension to show the priority active favorite channels of as a notification to you.",
  "icons": {
    "128": "bw128px.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "bw128px.png"
  },
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "https://api.twitch.tv/*"
      ],
      "js": [
        "contentScript.bundle.js"
      ],
      "css": [
        "content.styles.css"
      ]
    }
  ],
  "homepage_url": "https://github.com/spddl",
  "permissions": [
    "https://*.twitch.tv/",
    "https://twitch.tv/",
    "tabs",
    "storage",
    "notifications"
  ],
  "web_accessible_resources": [
    "content.styles.css",
    "bw128px.png"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "spddlhh@gmail.com"
    }
  }
}
